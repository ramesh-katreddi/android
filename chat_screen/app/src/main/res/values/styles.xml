<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="text_primary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_primary.light" parent="text_primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="text_secondary" parent="text_primary">
        <item name="android:alpha">0.4</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="icon_clickable">
        <item name="android:layout_width">@dimen/clickable_icon_width</item>
        <item name="android:layout_height">@dimen/clickable_icon_height</item>
        <item name="android:layout_marginLeft">@dimen/clickable_icon_padding_x</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_marginTop">@dimen/clickable_icon_padding_y</item>
        <item name="android:layout_marginBottom">@dimen/clickable_icon_padding_y</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


</resources>
